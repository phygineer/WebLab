    "version": "0.2.0",
    "configurations": [
        {
            "name": "WebLab Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.weblab-backend.main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "WebLab Frontend",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "url": "http://localhost:4200/"
          }
    ]
}